<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PokéCollect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <%- include('navbar') %>

    <header class="expansion-heading">
        <h1>Pokémon Expansions</h1>
    </header>

    <main class="container-fluid">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% rowdata.forEach(expansion => { %>
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/expansions-cards/<%= expansion.expansion_id %>"><%= expansion.expansion_name %></a></h5>
                            <p class="card-text">Release Date: <%= expansion.release_date.toString().substring(3, 15) %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include('footer') %>
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>