<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pok√©Collect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>

    <%- include('navbar') %>

        <header class="user-collection">
            <h1>All Member Collections</h1>
        </header>

        <div class="filter-buttons">
            <p>Filter By: </p>
            <a href="/filter-by-name?sort=name"" class="btn btn-lg btn-dark">Collection Name</a>
            <a href="/filter-by-name?sort=username" class="btn btn-lg btn-dark">Username</a>
        </div>

        <div class="container-fluid">
            <div class="row">
                <% rowdata.forEach(collection=> { %>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"> <%= collection.name %> </h5>
                                <p class="card-text"> <%= collection.description %> </p>
                                <p class="card-text"> Created by <%= collection.username %></p>
                                <a href="/collection-details/<%= collection.collection_id %>" class="btn btn-dark">View Collection</a>
                            </div>
                            <div class="collection-rating-container">
                                <div class="collection-rating collection-rating-selected">
                                    <form action="/like-collection/<%= collection.collection_id %>" method="POST">
                                        <button type="submit">
                                            <span class="collection-rating-button material-icons">thumb_up</span>
                                            <span class="collection-rating-count"> <%= collection.likes_count %> </span>
                                        </button>
                                    </form>
                                </div>
                            </div>                            
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <%- include('footer') %>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</html>