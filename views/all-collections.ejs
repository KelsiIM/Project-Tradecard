<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pok√©Collect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <%- include('navbar') %>

    <div class="container">
        <h1> All Member Collections </h1>
        <div class="row">
            <% rowdata.forEach(collection => { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= collection.name %></h5>
                            <p class="card-text"> <%= collection.description %></p>
                            <p class="card-text"> Created by <%= collection.username %></p>
                            <a href="/collection-details/<%= collection.collection_id %>" class="btn btn-dark">View Collection</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

   


    <%- include('footer') %>
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>