<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pok√©Collect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <%- include('navbar') %>

    <header class="user-collection">
        <h1>My Collections</h1>
    </header>

    <div class="collection-buttons">
        <a href="dashboard" class="btn btn-lg btn-dark">Go Back</a>
        <a href="create-collection" class="btn btn-lg btn-dark">Create Collection</a>
    </div>

    <div class="row">
        <% rowdata.forEach(collection => { %>
         <div class="col-sm-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"> <%= collection.name %></h5>
              <p class="card-text"> <%= collection.description %></p>
              <a href="/collection-details/<%= collection.collection_id %>" class="btn btn-dark">View Collection</a>
              <a href="/delete-collection/<%= collection.collection_id %>" class="btn btn-danger">Delete Collection</a>
            </div>
          </div>   
        </div>
       <% }); %>
    </div>

    <%- include('footer') %>
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>