<body>

    <%- include('navbar') %>

    <header class="user-collection">
        <h1>Delete Collection</h1>
    </header>

    <main class="container">
        <form action="/delete-collection/<%= collectionId %>" method="POST">
            <div class="confirm-delete">
                <p> Are you sure you want to delete this collection? This is permanent!</p>
                    <p>You will be redirected back to your collections upon successful deletion.</p>
                    <a href="/collection" class="btn btn-lg btn-dark">Go Back</a>
                <button type="submit" class="btn btn-danger btn-lg">Delete</a>
            </div>
        </form>
    </main>

    <%- include('footer') %>
    
