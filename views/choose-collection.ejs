<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pok√©Collect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>


    <%- include('navbar') %>

    <div class="container-fluid">
        <form action="/add-to-collection/<%= cardId %>" method="POST">
            <div class="col">
                <label for="collectionSelect" class="form-label"> Select Collection : </label> 
                <select class="form-select" id="collectionSelect" name="collectionId">
                    <!-- loop to show each collection created by the user in the dropdown select-->
                    <% collections.forEach(collection => { %>
                     <option value="<%= collection.collection_id %>"> <%= collection.name %> </option>
                    <% }) %>
                </select>
            </div>
            <div class="add-buttons">
            <button type="submit" class="btn btn-dark"> Add to Collection</button>
            <a href="/cards" class="btn btn-dark">Go Back</a>
            </div>
        </form>
    </div>

        <%- include('footer') %>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</html>