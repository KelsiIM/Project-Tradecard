<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pok√©Collect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <%- include('navbar') %>

    <main>
        <div class="container mt-4">
            <h1>All Cards</h1>
            <div class="row">
                <% cards.forEach(card => { %>
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <a href="/cards/<%= card.card_id %>">
                                <img src="<%= card.url_image %>" class="card-img-top" alt="<%= card.card_name %>">
                            </a>
                            <div class="card-body">
                                <div class="value-buttons-container">
                                    <button type="button" class="btn btn-primary btn-sm collection-button">Collection</button> 
                                    <h5 class="card-title">$<%= card.value_price %></h5>
                                    <button type="button" class="btn btn-danger btn-sm wishlist-button">Wishlist</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>

    <%- include('footer') %>
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>